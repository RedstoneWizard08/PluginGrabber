{
    "compilerOptions": {
        "module": "CommonJS",
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "noImplicitAny": true,
        "lib": ["ES2021", "DOM", "DOM.Iterable"],
        "outDir": "dist",
        "types": ["node"],
        "baseUrl": ".",
        "strict": true,
        "resolveJsonModule": true,
        "alwaysStrict": true,
        "strictNullChecks": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "target": "ES2021",
        "declaration": true,
        "allowJs": true,
        "checkJs": true,
        "importHelpers": true
    },
    "exclude": ["node_modules", "dist", ".yarn"],
    "include": ["src"]
}
